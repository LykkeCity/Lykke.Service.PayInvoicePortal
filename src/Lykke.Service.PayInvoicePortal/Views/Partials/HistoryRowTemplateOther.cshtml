@using Lykke.Service.PayInvoicePortal.Models.Invoices
@model HistoryRowTemplateModel

<div class="history_item__img @Model.HistoryItemImg">
    <div class="_circle"><i class="icon @Model.HistoryItemIcon"></i></div>
</div>
<div class="history_item__content">
    <div class="pull-right label" data-ng-class="vm.handlers.getStatusCss(item.status)" data-ng-bind="item.status"></div>
    <div class="history_item__title">
        @Model.HistoryItemTitle
        <span class="middot">&middot;</span>
        <div class="history_item__date" data-ng-bind="item.date.format('LLL')"></div>
    </div>
    <div class="history_item__text">
        @Model.HistoryItemText
    </div>
</div>